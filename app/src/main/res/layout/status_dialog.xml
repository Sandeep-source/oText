<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    style="@style/AppTheme"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="wrap_content">
   <TextView
       android:minWidth="360dp"
       android:text="Status"
       android:padding="5dp"
       android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_media"
            tools:src="@tools:sample/avatars"
            android:layout_margin="3dp"
            android:id="@+id/statusThumb"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/statusFileName"
            tools:text="status example .mp4"
            android:textSize="17sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <EditText
        android:id="@+id/statusTextInput"
        android:textSize="16sp"
        android:paddingVertical="5dp"
        android:paddingStart="15dp"
        android:textColorHint="#676767"
        android:hint="Express your feelings"
        android:background="#eaeaea"
        android:maxLength="300"
        android:layout_width="match_parent"
        android:paddingBottom="0dp"
        android:minHeight="50dp"
        android:maxHeight="100dp"
        android:layout_height="wrap_content"/>
 <LinearLayout
     android:orientation="horizontal"
     android:gravity="end"
     android:layout_marginTop="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:id="@+id/cancel"
         android:background="@drawable/background"
         android:text="@string/fui_cancel"
         android:textColor="#fff"
         android:paddingVertical="10dp"
         android:paddingHorizontal="20dp"
         android:layout_marginHorizontal="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <LinearLayout
         android:id="@+id/uploadButton"
         android:orientation="horizontal"
         android:layout_gravity="end"
         android:background="@drawable/background"
         android:layout_width="wrap_content"
         android:gravity="center"
         android:paddingHorizontal="20dp"

         android:layout_height="40dp">
         <ProgressBar
             android:id="@+id/statusUploadProgress"
             android:layout_width="20dp"
             android:progressTint="#fff"
             android:visibility="gone"
             tools:visibility="visible"
             android:backgroundTint="#00000000"
             android:layout_marginHorizontal="4dp"
             android:indeterminateTintMode="add"
             android:indeterminateTint="#00000000"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/uploadText"
             android:paddingHorizontal="4dp"
             android:textSize="16sp"
             android:textColor="#fff"
             android:text="Upload"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
     </LinearLayout>
 </LinearLayout>
</LinearLayout>